{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "io.synadia.nex.event.agent_stopped",
  "title": "AgentStoppedEvent",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "The unique identifier of the nex agent"
    },
    "name": {
      "type": "string",
      "description": "The name of the agent"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "The timestamp when the agent stopped"
    },
    "reason": {
      "type": "string",
      "description": "The reason why the agent stopped"
    }
  },
  "required": [
    "id",
    "name", 
    "timestamp",
    "reason"
  ]
}
