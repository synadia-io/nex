{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "io.synadia.nex.event.workload_started",
  "title": "WorkloadStartedEvent",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "The unique identifier of the workload"
    },
    "namespace": {
      "type": "string",
      "description": "The namespace of the workload"
    },
    "workload_type" : {
      "type": "string",
      "description": "The type of the workload, e.g., 'container', 'javascript', etc"
    },
    "metadata": {
      "type": "object",
      "description": "The metadata of the workload",
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "required": [
    "id",
    "namespace",
    "workload_type"
  ]
}
