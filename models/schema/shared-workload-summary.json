{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "shared",
  "title": "WorkloadSummary",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "The unique identifier of the workload"
    },
    "name": {
      "type": "string",
      "description": "The name of the workload"
    },
    "start_time": {
      "type": "string",
      "description": "The start time of the workload"
    },
    "runtime": {
      "type": "string",
      "description": "The runtime of the workload"
    },
    "workload_type": {
      "type": "string",
      "description": "The type of the workload"
    },
    "workload_lifecycle": {
      "type": "string",
      "description": "The lifecycle of the workload: service,job,function"
    },
    "workload_state": {
      "$ref": "./shared-workload-state.json",
      "description": "The state of the workload"
    },
    "metadata": {
      "type": "object",
      "description": "Arbitrary data for agent use",
      "additionalProperties": {
        "type": "string"
      }
    },
    "tags": {
      "$ref": "./shared-tag-map.json",
      "description": "The tags of the workload"
    }
  },
  "required": [
    "id",
    "name",
    "start_time",
    "runtime",
    "workload_type",
    "workload_lifecycle",
    "workload_state",
    "tags"
  ],
  "additionalProperties": false
}
